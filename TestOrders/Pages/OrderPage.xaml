<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestOrders.Pages.OrderPage"
             Title="OrderPage"
             xmlns:viewmodel="clr-namespace:Orders.Common.ViewModel;assembly=Orders.Common"
             x:DataType="viewmodel:OrderViewModel">
    <VerticalStackLayout>

        <Label Text="Order" VerticalOptions="Start" HorizontalOptions="Center" />

        <Label Text="Order ID"/>
        <Label Text="{Binding OrderID}"/>

        <Label Text="Customer Name"/>
        <Label Text="{Binding CustomerName}"/>


    </VerticalStackLayout>
</ContentPage>